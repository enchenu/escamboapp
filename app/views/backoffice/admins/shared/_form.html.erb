<h1 class="page-header">Administradores</h1>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-6">
              <%= form_for([:backoffice, @admin]) do |f| -%>
              <div class="form-group">
                  <label>Nome</label>
                  <%= f.text_field :name, class:"form-control", placeholder:"Nome dp Administrador" -%>
              </div>

              <div class="form-group">
                  <label>Email</label>
                  <%= f.text_field :email, class:"form-control", placeholder:"Email del administrador" -%>
              </div>

              <div class="form-group">
                  <label>Contraseña</label>
                  <%= f.password_field :password, class:"form-control", placeholder:"Contraseña" -%>
              </div>

              <div class="form-group">
                  <label>Confirmación de la contraseña</label>
                  <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirmación de la contraseñ" -%>
              </div>


                <button type="submit" class="btn btn-default">Guardar</button>
              <% end %>
          </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->